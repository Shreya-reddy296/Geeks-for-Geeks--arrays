          return mid;
          else if(mid>a[mid])
               binarySearch(a,mid+1,h);
          else
             binarySearch(a,l,mid-1);
   }
   return -1
}
    return -1;
}
int main()
{
    int arr[] = {-10, -1, 0, 3, 10, 11, 30, 50, 100};
    int n = sizeof(arr)/sizeof(arr[0]);
    cout<< binarySearch(arr, 0,n-1);

